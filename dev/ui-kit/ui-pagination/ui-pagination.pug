//- Pagination
mixin pagination(amount, active, ellipsis, last, arrows)
    //- amount - amount of displayed numbers +1 prior ellipsis
    //- active - active number
    //- ellipsis - number to be replaced by ellipsis
    //- last - number after ellipsis
    //- .icon-pagination-prev and .icon-pagination-next
    .с-pagination
    //- prev arrow
    if (arrows === arrows)
        a(href="#" title="Prev page").с-pagination__prev.icon-pagination-prev ◀
else

    ul.с-pagination__list
    //- before ellipsis
    - for (var index = 1; index <= amount; index++)
    if (index === active)
        li.с-pagination__item.is-active
        a(href="#" title=`Current page ${index}`).с-pagination__number= index
    else if (index === ellipsis)
        li.с-pagination__item.is-collapsed
        span.с-pagination__number ...
    else
    li.с-pagination__item(class= index === 1 ? 'с-pagination__item_first' : '')
        a(href="#" title=`Go to page ${index}`).с-pagination__number= index
    //- after ellipsis
    - for (var index = amount + 1; index <= last; index++)
    li.с-pagination__item(class= index === last + 1 ? 'с-pagination__item_last' : '')
        a(href="#" title=`Go to pagе ${index}`).с-pagination__number= index

//- next arrow
if (arrows === arrows)
    a(href="#" title="Next page").с-pagination__next.icon-pagination-next ▶
else

//- Use example
//- first part is 5 numbers
//- 3 is active
//- 4 is ellipsis
//- 9 is the last number, starting from last number of first part (5)
//- arrows - show prev/next arrows
+pagination(5, 3, 4, 9, arrows)